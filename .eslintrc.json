{
    "env": {
      "node": true,
      "es6": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"    
    },
    "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "indent": ["error", 2],
      "comma-dangle": ["error", "always-multiline"],
      "no-console": "off" // Allowing console.log for CLI scripts
    }
  }